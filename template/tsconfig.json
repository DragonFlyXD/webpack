{
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "es2015",
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "allowJs": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "pretty": true
  },
  "lib": [
    "dom",
    "es5",
    "es6",
    "es7",
    "es2015.promise"
  ]
}